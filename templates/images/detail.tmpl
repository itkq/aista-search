{{ define "title"}} - 画像詳細{{ end }}
{{ define "head" }}{{ end }}
{{ define "content" }}

<h2>画像詳細</h2>
{{ with .image }}
  <form id="image" method="post" action="/images/{{ .ID }}">
    <img width="800px" src="{{ .Path | ImagePath }}">
    <br>
    <label for="sentence">登録文字列:</label>
    {{ with .Sentence }}
  	<input type="text" size="64" name="sentence" value="{{ if .Valid }}{{ .String }}{{ end }}">
    {{ end }}
    <br>
    {{ with .URL }}
  	{{ if .Valid }}
        <label for="url">Twitter画像URL:</label>
        <input type="text" size="64" readonly="readonly" value="{{ .String }}">
      {{ end }}
    {{ end }}
    <br>
    <input type="submit" value="更新する">
{{ end }}
</form>

{{ end }}
{{ define "foot" }}{{ end }}
